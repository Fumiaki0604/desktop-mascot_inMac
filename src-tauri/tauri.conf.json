{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "desktop-mascot-tauri",
  "version": "0.1.0",
  "identifier": "com.apple.desktop-mascot-tauri",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "Desktop Mascot",
        "fullscreen": true,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": false,
        "resizable": false,
        "skipTaskbar": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
