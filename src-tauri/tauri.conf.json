{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "desktop-mascot-tauri",
  "version": "0.1.0",
  "identifier": "com.apple.desktop-mascot-tauri",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "mascot",
        "title": "Mascot",
        "url": "mascot.html",
        "width": 200,
        "height": 250,
        "x": 100,
        "y": 100,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": false,
        "resizable": false,
        "skipTaskbar": true
      },
      {
        "label": "bubble",
        "title": "Bubble",
        "url": "bubble.html",
        "width": 400,
        "height": 200,
        "x": 310,
        "y": 100,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": false,
        "resizable": false,
        "skipTaskbar": true
      },
      {
        "label": "weather",
        "title": "Weather",
        "url": "weather.html",
        "width": 120,
        "height": 80,
        "x": 720,
        "y": 100,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": false,
        "resizable": false,
        "skipTaskbar": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
